@model consultancysolution.Models.Students

<div class="container mt-4">
    <h1 class="text-center">Add New Student</h1>
    <form asp-action="Create" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" value="@Model.Email" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" value="@Model.Email" />
            </div>
            <div class="col-md-6">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" value="@Model.Address" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" value="@Model.DateOfBirth" />
            </div>
            <div class="col-md-6">
                <label asp-for="AdmissionDate" class="form-label">Admission Date</label>
                <input asp-for="AdmissionDate" class="form-control" type="date" value="@Model.AdmissionDate" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="AdmissionCost" class="form-label">Admission Cost</label>
                <input asp-for="AdmissionCost" class="form-control" type="number" id="admissionCost"
                    value="@Model.AdmissionCost" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Course</label>
                <select asp-for="StudentCourses" id="multiselect" class="form-control" name="SelectedCourses"
                    data-live-search="true">
                    <option value="">Select Course</option>
                    @if (ViewBag.Courses is List<consultancysolution.Models.Course> courses)
                    {
                        foreach (var course in courses)
                        {
                            <option value="@course.Id" data-price="@course.Price">@course.Name (@course.Price)</option>
                        }
                    }
                </select>
            </div>
        </div>
        <!-- Calculation Area -->
        <div class="row mb-3">
            <div class="col-md-12">
                <h5>Calculation</h5>
                <p><strong>Selected Courses Cost:</strong> $<span id="coursesCost">0</span></p>
                <p><strong>Admission Cost:</strong> $<span id="admissionCostDisplay">0</span></p>
                <p><strong>Total Cost:</strong> $<span id="totalCost">0</span></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        // Initialize Select2
        $('#multiselect').select2();

        // Update calculation when courses are selected
        $('#multiselect').on('change', function () {
            debugger;
            let totalCoursesCost = 0;

            // Calculate the total cost of selected courses
            $('#multiselect option:selected').each(function () {
                const coursePrice = parseFloat($(this).data('price')) || 0;
                totalCoursesCost += coursePrice;
            });

            // Get the admission cost
            const admissionCost = parseFloat($('#admissionCost').val()) || 0;

            // Update the calculation display
            $('#coursesCost').text(totalCoursesCost.toFixed(2));
            $('#admissionCostDisplay').text(admissionCost.toFixed(2));
            $('#totalCost').text((totalCoursesCost + admissionCost).toFixed(2));
        });

        // Update calculation when admission cost changes
        $('#admissionCost').on('input', function () {
            debugger;
            $('#multiselect').trigger('change'); // Trigger the change event to recalculate
        });
    });
</script>
